                      </div>
                      <h2 class="card-trip-pricing"><%= kitchen.price_by_hour %>€/heure</h2>
                      <!-- A MODIFIER PAR LES PHOTOS DU PROPRIETAIRE -->
                      <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
                    </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
    </div>
</div>





