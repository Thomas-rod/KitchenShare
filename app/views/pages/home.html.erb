      <%= image_tag "cuisine_mao_1.png", alt: "cuisine", class: "d-block w-100" %>
      <div class="carousel-caption d-none d-md-block">
        <h5>Paris 5eme</h5>
        <p>Cuisine de Jean jaques 8€/h</p>
      </div>
    </div>
    <div class="carousel-item">
      <%= image_tag "cuisine_3.png", alt: "cuisine", class: "d-block w-100" %>
          <div class="carousel-caption d-none d-md-block">
        <h5>Paris 4eme</h5>
        <p>Cuisine de Colette 7€/h</p>
      </div>
    </div>
    <div class="carousel-item">
      <%= image_tag "cuisine_4.png", alt: "cuisine", class: "d-block w-100" %>
          <div class="carousel-caption d-none d-md-block">
